CXX      = g++
LIBS     = Magick++ avahi-client libpsx
CXXFLAGS = -pedantic -std=c++17 -Wall -Werror -g
CPPFLAGS = `pkg-config --cflags $(LIBS)`
LDFLAGS  = `pkg-config --libs $(LIBS)`

SRC_DIR   = src
BUILD_DIR = build
PROG      = Exposure

: foreach $(SRC_DIR)/*.cpp |> $(CXX) $(CPPFLAGS) $(CXXFLAGS) -c %f -o %o |> $(BUILD_DIR)/%B.o
: $(BUILD_DIR)/*.o |> $(CXX) %f $(LDFLAGS) -o %o |> $(PROG)

.gitignore
